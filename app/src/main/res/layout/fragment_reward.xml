<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RewardFragment">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

    <ImageView
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_employe1"/>


      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">

          <TextView
              android:layout_width="100dp"
              android:layout_height="wrap_content"
              android:layout_marginStart="15dp"
              android:layout_marginTop="5dp"
              android:fontFamily="@font/poppinsmedium"
              android:text="Select Data"
              android:textColor="@color/black"
              android:textSize="15sp"
              android:textStyle="bold" />

          <LinearLayout
              android:layout_width="200dp"
              android:layout_height="20dp"
              android:layout_marginStart="10dp"
              android:layout_marginTop="7dp"
              android:background="@drawable/bg_chebox"
              android:elevation="7dp"
              android:orientation="vertical">

              <ImageView
                  android:id="@+id/img_chek2"
                  android:layout_width="20dp"
                  android:layout_height="20dp"
                  android:layout_gravity="end"
                  android:src="@drawable/ic_check" />
          </LinearLayout>
      </LinearLayout>

      <LinearLayout
          android:padding="10dp"
          android:layout_marginTop="40dp"
          android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">

          <TextView
              android:layout_width="100dp"
              android:layout_height="wrap_content"
              android:fontFamily="@font/poppinsmedium"
              android:textColor="@color/black"
              android:text="No Judul"
              android:textSize="15sp"/>
          <EditText
              android:id="@+id/edt_no_judulfragment_rewad"
              android:layout_width="200dp"
              android:layout_height="35dp"
              android:textSize="15sp"
              android:elevation="5dp"
              android:layout_gravity="center"
              android:gravity="center"
              android:textColor="@color/black"
              android:background="@drawable/bg_edittext"
              android:fontFamily="@font/poppinsregular"
              android:layout_marginLeft="10dp"/>
      </LinearLayout>

      <LinearLayout
          android:padding="10dp"
          android:layout_marginTop="5dp"
          android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">

          <TextView
              android:layout_width="100dp"
              android:layout_height="wrap_content"
              android:fontFamily="@font/poppinsmedium"
              android:textColor="@color/black"
              android:text="Nama"
              android:textSize="15sp"/>

          <EditText
              android:id="@+id/edt_nama_fragment"
              android:layout_width="200dp"
              android:layout_height="35dp"
              android:layout_gravity="center"
              android:layout_marginLeft="10dp"
              android:background="@drawable/bg_edittext"
              android:elevation="5dp"
              android:fontFamily="@font/poppinsregular"
              android:gravity="center"
              android:textColor="@color/black"
              android:textSize="15sp" />
      </LinearLayout>

      <LinearLayout
          android:padding="10dp"
          android:layout_marginTop="5dp"
          android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">

          <TextView
              android:layout_width="100dp"
              android:layout_height="wrap_content"
              android:fontFamily="@font/poppinsmedium"
              android:text="Judul"
              android:textColor="@color/black"
              android:textSize="15sp" />
          <EditText
              android:id="@+id/edt_judulfragment"
              android:layout_width="200dp"
              android:layout_height="35dp"
              android:textSize="15sp"
              android:elevation="5dp"
              android:layout_gravity="center"
              android:gravity="center"
              android:textColor="@color/black"
              android:background="@drawable/bg_edittext"
              android:fontFamily="@font/poppinsregular"
              android:layout_marginLeft="10dp"/>
      </LinearLayout>

      <LinearLayout
          android:padding="10dp"
          android:layout_marginTop="5dp"
          android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">

          <TextView
              android:layout_width="100dp"
              android:layout_height="wrap_content"
              android:fontFamily="@font/poppinsmedium"
              android:textColor="@color/black"
              android:text="Total Reward"
              android:textSize="15sp"/>
          <EditText
              android:id="@+id/edt_totalrewadfragment"
              android:layout_width="200dp"
              android:layout_height="35dp"
              android:textSize="15sp"
              android:elevation="5dp"
              android:layout_gravity="center"
              android:gravity="center"
              android:textColor="@color/black"
              android:background="@drawable/bg_edittext"
              android:fontFamily="@font/poppinsregular"
              android:layout_marginLeft="10dp"/>
      </LinearLayout>

      <LinearLayout
          android:layout_marginTop="50dp"
          android:layout_marginLeft="20dp"
          android:layout_marginRight="20dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">

          <Button
              android:id="@+id/btn_simpan_fragment"
              android:layout_width="130dp"
              android:layout_height="40dp"
              android:layout_marginStart="20dp"
              android:background="@drawable/bg_button"
              android:elevation="5dp"
              android:fontFamily="@font/poppinsbold"
              android:gravity="center"
              android:text="Simpan"
              android:textColor="@color/white"/>

          <Button
              android:id="@+id/btn_batal_fragment"
              android:layout_marginStart="20dp"
              android:layout_width="130dp"
              android:layout_height="40dp"
              android:text="Batal"
              android:gravity="center"
              android:elevation="5dp"
              android:textColor="@color/white"
              android:background="@drawable/bg_button"
              android:fontFamily="@font/poppinsbold"/>

      </LinearLayout>

  </LinearLayout>

</FrameLayout>